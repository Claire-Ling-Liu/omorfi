#!/bin/bash
# coverage for fiwiki-latest
fsa="@top_builddir@/src/morphology.@TAGSET@.hfst"
if ! test -r @top_builddir@/src/morphology.@TAGSET@.hfst ; then
    echo Unable to find built fsa for tests: $fsa
fi

function _preproc() {
    cat $@ | sed -e 's/[[:punct:]][[:space:][:punct:]]/ \0/g' \
        -e 's/[[:punct:]]\r\?$/ \0/' -e 's/^[[:punct:]]/\0 /' \
        -e 's/[[:space:]][[:punct:]]/\0 /g' -e 's/[[:space:]]/ /g' |\
        tr -s ' ' '\n'
}
preprocess=_preproc
if ! test -f "fiwiki-latest-pages-articles.tokens" ; then
    if ! test -f "fiwiki-pages-articles.xml.bz2" ; then
        fetch-wikimedia.bash fiwiki
    fi
    unpack-wikimedia.bash fiwiki > fiwiki-latest-pages-articles.text
    $preprocess < fiwiki-latest-pages-articles.text > fiwiki-latest-pages-articles.tokens
fi
hfst-lookup -q $fsa < fiwiki-latest-pages-articles.tokens > fiwiki-latest-pages-articles.anals
tokens=$(wc -l < fiwiki-latest-pages-articles.tokens)
misses=$(fgrep -c '+?' < fiwiki-latest-pages-articles.anals)
coverage=$(echo 100 * $misses/$tokens | bc )

if test $coverage -lt 95 ; then
    echo fiwiki coverage should be more than 95, see:
    fgrep '+?' < fiwiki-latest-pages-articles.anals | sort | uniq -c | sort -nr | head -n 1000
    exit 1
fi


