#!/bin/bash
# coverage for fiwiki-latest
fsa="@top_builddir@/src/morphology.@TAG_FORMAT@.hfst"
if ! test -r @top_builddir@/src/morphology.@TAG_FORMAT@.hfst ; then
    echo Unable to find built fsa for tests: $fsa
fi

function _preproc() {
    cat $@ | sed -e 's/[[:punct:]][[:space:][:punct:]]/ \0/g' \
        -e 's/[[:punct:]]\r\?$/ \0/' -e 's/^[[:punct:]]/\0 /' \
        -e 's/[[:space:]][[:punct:]]/\0 /g' -e 's/[[:space:]]/ /g' |\
        tr -s ' ' '\n'
}
preprocess=_preproc
if ! test -f "jrc-fi.tokens" ; then
    if ! test -f "jrc-fi.tgz" ; then
        fetch-jrc-acquis.bash "fi"
    fi
    unpack-jrc-acquis.bash fiwiki > jrc-fi.text
    $preprocess < jrc-fi.text > jrc-fi.tokens
fi
hfst-lookup -q $fsa < jrc-fi.tokens > jrc-fi.anals
tokens=$(wc -l < jrc-fi.tokens)
misses=$(fgrep -c '+?' < jrc-fi.anals)
coverage=$(echo "100 - 100 * $misses/$tokens" | bc )

if test $coverage -lt 95 ; then
    echo JRC acquis coverage should be more than 95, see:
    fgrep '+?' < jrc-fi.anals | sort | uniq -c | sort -nr | head -n 1000
    exit 1
fi


