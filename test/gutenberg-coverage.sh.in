#!/bin/bash
# coverage for fiwiki-latest
fsa="@top_builddir@/src/generated/omorfi-omor.analyse.hfst"
if ! test -r $fsa ; then
    echo Unable to find built fsa for tests: $fsa
fi

function _preproc() {
    cat $@ | sed -e 's/[[:punct:]][[:space:][:punct:]]/ \0/g' \
        -e 's/[[:punct:]]\r\?$/ \0/' -e 's/^[[:punct:]]/\0 /' \
        -e 's/[[:space:]][[:punct:]]/\0 /g' -e 's/[[:space:]]/ /g' |\
        tr -s ' ' '\n'
}
preprocess=_preproc
if ! test -f "gutenberg-fi.tokens" ; then
    fetch-gutenberg.bash "fi" txt
    unpack-gutenbergs.bash  > "gutenberg-fi.text"
    $preprocess < "gutenberg-fi.text" > "gutenberg-fi.tokens"
fi
echo Looking up gutenberg-fi.tokens
@TIME@ -o "gutenberg-fi.times" -a hfst-optimised-lookup -q $fsa < "gutenberg-fi.tokens" > "gutenberg-fi.anals"
tokens=$(wc -l < gutenberg-fi.tokens)
misses=$(fgrep -c '+?' < gutenberg-fi.anals)
coverage=$(echo "100 - 100 * $misses/$tokens" | bc )

if test $coverage -lt 96 ; then
    echo Gutenberg coverage should be more than 96, see:
    fgrep '+?' < "gutenberg-fi.anals" | sort | uniq -c | sort -nr | head 
    exit 1
fi


