#!/bin/bash
# coverage for fiwiki-latest
fsa="@top_builddir@/src/generated/omorfi-omor.analyse.hfst"
if ! test -r $fsa ; then
    echo Unable to find built fsa for tests: $fsa
fi

function _preproc() {
    cat $@ | sed -e 's/[[:punct:]][[:space:][:punct:]]/ \0/g' \
        -e 's/[[:punct:]]\r\?$/ \0/' -e 's/^[[:punct:]]/\0 /' \
        -e 's/[[:space:]][[:punct:]]/\0 /g' -e 's/[[:space:]]/ /g' |\
        tr -s ' ' '\n'
}
preprocess=_preproc
if ! test -f "gutenberg-fi.uniq.freqs" ; then
    if ! test -f "gutenberg-fi.tokens" ; then
        fetch-gutenberg.bash "fi" txt
        unpack-gutenbergs.bash  > "gutenberg-fi.text"
        $preprocess < "gutenberg-fi.text" > "gutenberg-fi.tokens"
    fi
    sort < gutenberg-fi.tokens | uniq -c | sort -nr > gutenberg-fi.uniq.freqs
fi
echo Looking up gutenberg-fi.tokens

if ! @PYTHON@ coverage.py -f $fsa -i gutenberg-fi.uniq.freqs -c 2 -o gutenberg-fi.log -t 96 ; then
    exit 1
fi


